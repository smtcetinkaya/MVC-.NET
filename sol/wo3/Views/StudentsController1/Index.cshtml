@model List<Student>

Students List

<table class="table table-sm table-dark">
	<tr>
		<th>Id</th>
		<th>Name</th>
		<th>Email</th>
		<th>Age</th>
		<th>Actions</th>
	</tr>
	@{
		foreach (var student in Model)
		{
			<tr>
				<td>@(student.Id)</td>
				<td>@(student.Name)</td>
				<td>@(student.Email)</td>
				<td>@(student.Age)</td>
				<td style="width:200px">
					<a asp-controller="StudentsController1" asp-action="Create" class=" btn-sm btn-primary">Create</a>
					<a asp-controller="StudentsController1" asp-action="Edit" asp-route-studentId="@student.Id" class=" btn-sm btn-success">Edit</a>
					<a onclick="Delete('@student.Id')" class=" btn-sm btn-danger">Delete</a>
				</td>
			</tr>
		}
	}
</table>

<script>
	function Delete(studentId) {
		if (confirm("Are you sure to delete this record?")) 
		{
			window.location = "/StudentsController1/Delete?studentId="+studentId;
		}

	}
</script>